{
  "name": "eslint-config-tsyirvo-react-native",
  "version": "1.4.0",
  "description": "Custom ESLint config for my React Native projects",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsyirvo/eslint-config-tsyirvo-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/tsyirvo/eslint-config-tsyirvo-react-native/issues"
  },
  "keywords": [
    "React Native",
    "ESLint",
    "ESLint config",
    "Typescript"
  ],
  "author": "Gabriel Hofman <gabriel.hofman.00@gmail.com>",
  "license": "ISC",
  "peerDependencies": {
    "eslint": ">= 8",
    "typescript": ">= 5"
  },
  "engines": {
    "yarn": ">=3",
    "node": ">=18"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "eslint": "8.42.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-babel-plugin-root-import": "1.1.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-native": "4.0.0",
    "eslint-plugin-testing-library": "5.11.0",
    "typescript": "5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "husky": "8.0.3",
    "semantic-release": "21.0.5",
    "semantic-release-cli": "5.4.4"
  },
  "resolutions": {
    "underscore.string": "2.4.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        2,
        "always",
        "Infinity"
      ],
      "header-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
