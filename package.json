{
  "name": "eslint-config-tsyirvo-react-native",
  "version": "1.2.0",
  "description": "Custom ESLint config for my React Native projects",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsyirvo/eslint-config-tsyirvo-react-native.git"
  },
  "bugs": {
    "url": "https://github.com/tsyirvo/eslint-config-tsyirvo-react-native/issues"
  },
  "keywords": [
    "React Native",
    "ESLint",
    "ESLint config",
    "Typescript"
  ],
  "author": "Gabriel Hofman <gabriel.hofman.00@gmail.com>",
  "license": "ISC",
  "peerDependencies": {
    "eslint": ">= 8",
    "typescript": ">= 4.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.30.3",
    "eslint": "8.19.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-babel-plugin-root-import": "1.1.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-native": "4.0.0",
    "typescript": "4.7.4",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "husky": "8.0.1",
    "semantic-release": "19.0.3",
    "semantic-release-cli": "5.4.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        2,
        "always",
        "Infinity"
      ],
      "header-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
